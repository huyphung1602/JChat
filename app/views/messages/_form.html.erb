<%= form_tag messages_path, :multipart => true do %>
  <div class="field" >
    <%= text_field_tag :email, params[:email], 
                               placeholder: 'Recipient email',
                               value: @email
     %>
  </div>

  <div class="field" >
    <%= text_field_tag :subject, params[:subject], placeholder: 'Subject' %>
  </div>

  <div class="field" >
    <%= text_area_tag :body, params[:body], placeholder: 'Content' %>
  </div>

  <div class="field" >
    <%= file_field_tag :image%>
  </div>

  <%= submit_tag "Send Message", class: 'ui green button', data: {disable_with: "Sending..."} %>
  <%= link_to "Back to Inbox", root_path, class: 'ui black button' %>
<% end %>